[user]
	name = misund
	email = thomas@hemmeligadresse.com
[push]
	default = simple

[alias]
	c = commit -am
	commti = commit
	up = pull
	psuh = push
	spuh = push
	p = push
	s = status -s
	staus = status -s
	stasus = status -s
	stasau = status -s
	sttaus = status -s
	statsu = status -s
	stasua = status -s
	stasus = status -s
	stastu = status -s
	statis = status -s
	stsaua = status -s
	statsus = status -s
	stastus = status -s
	stsatis = status -s
	stsatus = status -s
	sttatus = status -s
	df = diff --color --color-words --abbrev
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
[color]
	ui = always
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
	editor = vim
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	log = true
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"

# http://rentzsch.tumblr.com/post/564806957/public-but-hackable-git-submodules
[url "git@git.neuf.no:"]
	insteadOf = "git://git.neuf.no/"
	insteadOf = "neuf:"

[url "git@git.mienko.no:"]
	insteadOf = "mienko:"
	insteadOf = "m:"

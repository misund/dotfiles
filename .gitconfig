[push]
	default = simple

[alias]
	c = commit -am
	commti = commit
	up = pull
	psuh = push
	spuh = push
	p = push
	s = status -s
	staus = status -s
	stasu = status
	stasus = status -s
	stasau = status -s
	sttaus = status -s
	statsu = status -s
	stasua = status -s
	stasus = status -s
	stastu = status -s
	statis = status -s
	stsaua = status -s
	statsus = status -s
	stastus = status -s
	stsatis = status -s
	stsatus = status -s
	sttatus = status -s
	df = diff --color --color-words --abbrev
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	br = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'

	# Lifted from https://gitlab.com/Gipphe/git-config
	# Delete any branches that have been merged into master
	# See also: https://gist.github.com/robmiller/5133264
	delete-merged-branches = "!git checkout main && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
	rm-merged = !git branch --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" { print $1 }' | xargs -r git branch -D

[color]
	ui = always
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
	editor = vim
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	log = true

[url "git@github.com:"]
	insteadOf = "gh:"
	insteadOf = "https://github.com"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"

[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"

# http://rentzsch.tumblr.com/post/564806957/public-but-hackable-git-submodules
[url "git@git.neuf.no:"]
	insteadOf = "git://git.neuf.no/"
	insteadOf = "neuf:"

[url "git@git.mienko.no:"]
	insteadOf = "mienko:"
	insteadOf = "m:"

[url "git@github.com:soldotno/"]
	insteadOf = "sol:"
	insteadOf = "s:"

[url "git@github.com:dbmedialab/"]
	insteadOf = "aller:"
	insteadOf = "a:"
	insteadOf = "dagbladet:"
	insteadOf = "dbmedialab:"
	insteadOf = "db:"
[commit]
	gpgsign = true
[tag]
	gpgSign = true
[gpg]
	program = gpg
[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P

[includeIf "gitdir:~/src/coop/"]
  	path = ~/.gitconfig-coop
[init]
	defaultBranch = main
